						<td>{shopName}</td>
						<td>{shopPrice}</td>
						<td><div align="center">{shopAmount}</div></td>
						<td><div align="center">{shopJS}</div></td>
					</tr><!-- {endLoop} -->
				</tbody>
			</table>	

            </div>
