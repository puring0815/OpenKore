<script type="application/javascript" defer="defer">
			function send_command() {
				var tc = document.getElementById("text_command");
				var combo = document.getElementById("sel");
				window.location.href = '../handler?command=' + combo.options[combo.selectedIndex].value + tc.value + '';
			}	
			function submitenter(e) {
				var keycode;
				if (window.event) keycode = window.event.keyCode;

				if (keycode == 13) {
					send_command();
				}
			}
			function exibir() {
				var escolhido = lista_loja.options[lista_loja.selectedIndex].value;			

				window.location.href = '../handler?shop=' + escolhido + '';
			}		
</script>	 

